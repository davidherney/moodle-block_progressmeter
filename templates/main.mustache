{{!
    @template block_progressmeter/main

    This template renders the template content area for a resource.

    Example context (json):
    {
        "uniqueid": "unique_id_string",
        "style": "default",
        "measures": [
            {
                "percent": 50,
                "totalcourses": 10,
                "completed": 5,
                "moreurl": "http://example.com/report",
                "subtitle": "My subtitle",
                "percent": 50,
                "type": "team"
            }
        ]
    }
}}
{{< block_progressmeter/view}}

    {{$metter}}
        <div class="card progressmeter_type-{{type}}">
            {{#hassubtitle}}
                <h5 class="card-header">{{subtitle}}</h5>
            {{/hassubtitle}}

            <div class="progressmeter_pix">
                <div class="progressmeter_range">
                    <div class="progressmeter_level" data-percent="{{percent}}" style="height: {{percent}}%;"></div>
                </div>
                <div class="progressmeter_value">{{percent}}%</div>
            </div>

            {{>block_progressmeter/data}}

        </div>
    {{/metter}}

{{/ block_progressmeter/view}}