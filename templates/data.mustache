{{!
    @template block_progressmeter/data

    This template renders the template content area for a resource.

    Example context (json):
    {
        "percent": 50,
        "totalcourses": 10,
        "completed": 6,
        "pending": 4,
        "moreurl": "http://example.com/report",
        "subtitle": "My subtitle",
    }
}}

<ul class="list-group">
    {{#data}}
        <li class="list-group-item d-flex {{#style}}list-group-item-{{.}}{{/style}} justify-content-between align-items-center">
            {{#viewurl}}<a href="{{{viewurl}}}">{{label}}</a>{{/viewurl}}
            {{^viewurl}}{{label}}{{/viewurl}}
            <span class="badge bg-primary rounded-pill">{{value}}</span>
        </li>
    {{/data}}
</ul>
{{#moreurl}}
<div class="card-footer">
    <div class="btn-box"><a href="{{moreurl}}" class="btn btn-primary">{{#str}} viewmore, block_progressmeter {{/str}}</a></div>
</div>
{{/moreurl}}
