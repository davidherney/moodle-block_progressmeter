{{!
    @template block_progressmeter/main

    This template renders the template content area for a resource.

    Example context (json):
    {
        "uniqueid": "unique_id_string",
        "style": "default",
        "measures": [
            {
                "percent": 50,
                "totalcourses": 10,
                "completed": 6,
                "pending": 4,
                "moreurl": "http://example.com/report",
                "subtitle": "My subtitle",
                "type": "team"
            }
        ]
    }
}}
{{#fullview}}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
{{/fullview}}

    <div class="block_progressmeter-content style-{{style}}">

        {{#measures}}
            {{$metter}}{{/metter}}
        {{/measures}}

    </div>

{{#fullview}}
        </div>
        <div class="col-md-8">
            <div class="courselist">

                <h3>{{subtitle}}</h3>

                <p>
                    {{{courseshelpmessage}}}
                </p>

                {{#hascourses}}
                    {{> block_progressmeter/coursecard }}
                {{/hascourses}}
                {{^hascourses}}
                    <div class="alert alert-info">
                        {{errormessage}}
                    </div>
                {{/hascourses}}

            </div>
        </div>
    </div>
</div>
{{/fullview}}
